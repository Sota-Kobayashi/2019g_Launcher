#ifndef MYHEADERS_MOTOR_H_
#define MYHEADERS_MOTOR_H_

class motorControl
{
public:
	motorControl();

	enum class driveMode : uint8_t{ SMB, LAP };
	inline void setDriveMode(driveMode setMode) const { nowDriveMode = setMode; }
	const driveMode& getNowDriveMode = nowDriveMode;
	~motorControl();

private:
	driveMode nowDriveMode = driveMode::SMB;
	constexpr uint16_t defaultPeriod	= 100 - 1;
	constexpr uint16_t defaultFrequency	= 20000;
};


#endif /* MYHEADERS_MOTOR_H_ */
