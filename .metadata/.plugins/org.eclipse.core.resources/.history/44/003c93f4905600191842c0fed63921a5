#ifndef MYHEADERS_BOARD_IO_HPP_
#define MYHEADERS_BOARD_IO_HPP_

#include <stm32f4xx.h>

enum class ioName : uint16_t
{
	sig0 = 0x0001,
	sig1 = 0x0002,
	sig2 = 0x0004,
	sig3 = 0x0008,
	sig4 = 0x0010,
	sig5 = 0x0020,
	sig6 = 0x0040,
	sig7 = 0x0080
};
enum class ioState { input, output };

template<ioName useIOname, ioState setIOstate>
class IO_sigPins
{
public:

	IO_sigPins()
	{
		//useIOname = ioName::sig1;
	}

private:
	void GPIO_pinsInit();
};


#endif /* MYHEADERS_BOARD_IO_HPP_ */
